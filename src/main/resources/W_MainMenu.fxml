
<?fxml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
  <!-- Note: The Buttons need onAction's-->
 
<HBox fx:controller="W_MainMenu" xmlns:fx="http://javafx.com/fxml" stylesheets="MenuStyles.css"
    spacing="10" prefHeight="500" prefWidth="700">
    <VBox>
      <ImageView  FitHeight="100" FitWidth="400" layoutX="30" layoutY="0">    
          <image>
                <Image url="/icons/ts2logo.PNG"/>
          </image>
      </ImageView>
      <ImageView  FitHeight="300" FitWidth="400" layoutX="30" layoutY="3">    
        <image>
              <Image url="/icons/skull.PNG"/>
        </image>
      </ImageView>
    </VBox>
    <VBox styleClass="menuButtons">
      <Button text="New Game" onAction="#btn_newGameClicked"/>
      <Button text="Load Game" onAction="#btn_loadSavedGameClicked"/>
      <Button text="How to play" onAction="#btn_ControlsClicked"/>
      <Button text="High Scores" onAction="#btn_scoreboardClicked"/>
      <Button text="Credits" onAction="#btn_creditsClicked"/>
    </VBox>
</HBox>    